@using StudentCourseRegistrationAssignment.BLL.ViewModels
@model List<CourseVM>

<h3 class="mb-3">Available Courses</h3>

<div class="mb-3">
    <a asp-action="MyCourses" class="btn btn-primary me-2">
        My Courses
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Credits</th>
            <th>Semester</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Credits</td>
                <td>@c.Semester</td>
                <td>
                    @if (c.IsRegistered)
                    {
                        <form asp-action="UnRegister" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="courseId" value="@c.Id" />
                            <button class="btn btn-sm btn-danger">
                                Unregister
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Register" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="courseId" value="@c.Id" />
                            <button class="btn btn-sm btn-success">
                                Register
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
