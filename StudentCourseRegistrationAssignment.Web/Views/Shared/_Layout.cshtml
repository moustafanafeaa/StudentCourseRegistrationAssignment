@using System.Globalization
@{
    var currentCulture = CultureInfo.CurrentCulture.Name;
    var dir = currentCulture == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@currentCulture" dir="@dir">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-3">
        <div class="d-flex justify-content-end mb-2">
            <form method="post" asp-controller="Account" asp-action="ChangeLanguage" class="d-inline">

                <input type="hidden" name="culture" value='@((currentCulture == "ar") ? "en" : "ar")' />
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    @(currentCulture == "ar" ? "EN" : "AR")
                </button>
            </form>
        </div>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
